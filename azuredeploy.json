{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "siteName": {
        "type": "string"
      },
      "hostingPlanName": {
        "type": "string"
      },
      "siteLocation": {
        "type": "string",
        "defaultValue": "UK West"
      },
      "sku": {
        "type": "string",
        "allowedValues": [
          "F1",
          "B1",
          "S1"
        ],
        "defaultValue": "F1"
      },
      "authority": {
        "type": "string",
        "defaultValue": "https://identity.dhi-dse.scot"
      },
      "clientId": {
        "type": "string",
        "defaultValue": "prefix.mybp",
        "metadata": {
          "description" : "Obtain a client id by visiting the developer portal"
        }
      },
      "clientSecret": {
        "type": "string",
        "defaultValue": "secret",
        "metadata": {
          "description" : "Set a client secret by visiting the developer portal"
        }
      }, 
      "healthDataClientBaseUri": {
        "type": "string",
        "defaultValue": "https://data.dhi-dse.scot"
      }
    },
    "resources": [
      {
        "apiVersion": "2017-08-01",
        "name": "[parameters('hostingPlanName')]",
        "type": "Microsoft.Web/serverFarms",
        "location": "[parameters('siteLocation')]",
        "sku": {
          "name" : "[parameters('sku')]"
        },
        "properties": {
          "name": "[parameters('hostingPlanName')]"
        }
      },
      {
        "apiVersion": "2016-08-01",
        "name": "[parameters('siteName')]",
        "type": "Microsoft.Web/Sites",
        "location": "[parameters('siteLocation')]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]"
        ],
        "properties": {
          "name": "[parameters('siteName')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverFarms/', parameters('hostingPlanName'))]"
        },
        "resources": [
          {
            "apiVersion": "2016-08-01",
            "type": "config",
            "name": "web",
            "dependsOn": [
              "[resourceId('Microsoft.Web/Sites/', parameters('siteName'))]"
            ],
            "properties": {
              "appSettings": [
                { "name": "OpenIdConnect:Authority", "value": "[parameters('authority')]" },
                { "name": "OpenIdConnect:ClientId", "value": "[parameters('clientId')]" },
                { "name": "OpenIdConnect:ClientSecret", "value": "[parameters('clientSecret')]" },
                { "name": "HealthDataClient:BaseUri", "value": "[parameters('healthDataClientBaseUri')]" }
              ]
            }
          }
        ]
      }
    ]
  }